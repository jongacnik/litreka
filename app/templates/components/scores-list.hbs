<div class="layout__box o__has-rows">
  {{#each moves as |move|}}
    {{#each move.scores as |score|}}
      <div class="layout__box o__has-columns">
        {{score.points}}
        {{#each score.letters as |letterInfo|}}
          <div class="letter-stand-cell">
            {{letterInfo.letter}}
          </div>
        {{/each}}
      </div>
    {{/each}}
  {{/each}}
</div>
